{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "react-app",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "overrides": [
        {
            "files": [
                "**/*.stories.*"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react", "react-hooks"],
    "rules": {
        "import/no-anonymous-default-export": "off",
        "indent": ["warn", 4],
        "quotes": ["error", "single", {
            "allowTemplateLiterals": true
        }],
        "react-hooks/exhaustive-deps": "off"
    }
}
